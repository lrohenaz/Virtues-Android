<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="isLightTheme">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorAccent</item>
    </style>


    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="isLightTheme">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:listViewStyle">@style/ListViewDark</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:preferenceStyle">@style/PreferenceStyleDark</item>
    </style>
    <style name="PreferenceStyleDark" parent="AppThemeDark">
    </style>
    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="FullscreenThemeDark" parent="AppThemeDark">
        <item name="android:actionBarStyle">@style/FullscreenDarkActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenDarkActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="ListViewDark" parent="@android:style/Widget.ListView">
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:listSelector">@color/colorAccentDark</item>
        <item name="android:cacheColorHint">@color/colorAccentDark</item>
        <item name="android:divider">@color/colorSecondaryDark</item>
        <item name="android:listChoiceIndicatorSingle">@color/colorAccentDark</item>
        <item name="android:listChoiceBackgroundIndicator">@color/colorAccentDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:colorPressedHighlight">@color/colorAccentDark</item>
    </style>
</resources>
